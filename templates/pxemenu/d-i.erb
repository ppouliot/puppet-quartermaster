label <%= @name %>
        menu label (<%= @rel_name %>): ^Manual Installation
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append priority=low video=vesa:ywrap,mtrr vga=788 locale=en_US lang=en console-setup/layoutcode=en initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %>

label <%= @name %>-<%= @autofile %>
        menu label (<%= @rel_name %>): ^<%= @autofile %> installation
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append priority=critical video=vesa:ywrap,mtrr vga=788 locale=en_US lang=en console-setup/layoutcode=en netconfig/get_hostname= auto preseed/url=http://<%= @ipaddress %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %>

label <%= @name %>-VM-<%= @autofile %>
        menu label (<%= @rel_name %>): ^VM <%= @autofile %> installation
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append priority=critical video=vesa:ywrap,mtrr vga=788 locale=en_US lang=en console-setup/layoutcode=en netcfg/choose_interface=eth1 netconfig/get_hostname= auto preseed/url=http://<%= @ipaddress %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %>


label <%= @name %>-rescue
        menu label (<%= @rel_name %>): Rescue Boot
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append priority=low video=vesa:ywrap,mtrr vga=788 locale=en_US lang=en console-setup/layoutcode=en rescue/enable=true initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %>

