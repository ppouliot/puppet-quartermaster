LABEL <%= @name %>
	MENU LABEL <%= @release %> <%= @p_arch %>: ^Manual
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> install=http://<%= @inst_repo %>

LABEL <%= @name %>-manual-vnc
	MENU LABEL <%= @release %> <%= @p_arch %>: ^VNC activated Manual install
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> install=http://<%= @inst_repo %> vnc=1 vncpasswd=<%= @vnc_passwd %>

LABEL <%= @name %>-<%= @autofile %>
	MENU LABEL <%= @release %> <%= @p_arch %>: ^BareMetal/KVM <%= @autofile %> 
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        APPEND autoyast=http://<%= @fqdn %>/install/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> install=<%= @inst_repo %>

LABEL <%= @name %>-VM-<%= @autofile %>
	MENU LABEL <%= @release %> <%= @p_arch %>: Hyper-V VM (LIS Enabled) <%= @autofile %> 
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        APPEND autoyast=http://<%= @fqdn %>/install/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> install=<%= @inst_repo %>


LABEL <%= @name %>-rescue
	MENU LABEL <%= @release %> <%= @p_arch %>: ^Rescue 
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        APPEND rescue=1 initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> install=<%= @inst_repo %>

