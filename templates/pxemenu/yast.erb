label <%= @name %>
        menu label (<%= @name %>): ^Manual Installation
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %> install=http://<%= @inst_repo %>

label <%= @name %>-<%= @autofile %>
        menu label (<%= @name %>): ^<%= @autofile %> Installation
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append autoyast=http://<%= @ipaddress %>/install/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %> install=<%= @inst_repo %>

label <%= @name %>-VM-<%= @autofile %>
        menu label (<%= @name %>): ^Virtual Machine <%= @autofile %> Installation
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append autoyast=http://<%= @ipaddress %>/install/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %> install=<%= @inst_repo %>


label <%= @name %>-rescue
        menu label (<%= @name %>): Rescue 
        kernel ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        append rescue=1 initrd=../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %><%= @initrd %> install=<%= @inst_repo %>

