TITLE <%= @distro.capitalize %>
LABEL <%= @name %>
        MENU LABEL (<%= @release %>-<%= @p_arch %>): <%= @distro.capitalize %> ^Manual Installation 
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> rootfstype=btrfs coreos.autologin

LABEL <%= @name %>-serial
        MENU LABEL (<%= @release %>-<%= @p_arch %>): <%= @distro.capitalize %> ^Manual Installation over Serial Console
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> rootfstype=btrfs coreos.autologin kernel_args=console="ttyS0,115200n9

LABEL <%= @name %>-<%= @autofile %>-install
        MENU LABEL (<%= @release %>-<%= @p_arch %>): ^<%= @autofile.capitalize %> Installation 
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> cloud-config-url=http://<%= @fqdn %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.pxe_installer.sh

LABEL <%= @name %>-<%= @autofile %>-install-serial
        MENU LABEL (<%= @release %>-<%= @p_arch %>): ^<%= @autofile.capitalize %> Installation over Serial Console
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> cloud-config-url=http://<%= @fqdn %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.pxe_installer.sh kernel_args=console="ttyS0,115200n9

LABEL <%= @name %>-<%= @autofile %>-cloud-config-only
        MENU LABEL (<%= @release %>-<%= @p_arch %>): <%= @autofile.capitalize %> Cloud-config ^Only
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> cloud-config-url=http://<%= @fqdn %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %>

LABEL <%= @name %>-<%= @autofile %>-running-instance
        MENU LABEL (<%= @release %>-<%= @p_arch %>): <%= @autofile.capitalize %> ^Running Instance
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @target_kernel %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> cloud-config-url=http://<%= @fqdn %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.running_instance.sh
