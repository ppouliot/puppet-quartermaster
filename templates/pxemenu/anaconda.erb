LABEL <%= @name %>
        MENU LABEL <%= @release %> <%= @p_arch %>: ^Manual 
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> url=<%= @inst_repo %>

LABEL <%= @name %>-manual-vnc
        MENU LABEL <%= @release %> <%= @p_arch %>: ^VNC Activeated Manual Installation
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> url=<%= @inst_repo %> <%= @vnc_option %> <%= @vnc_option_passwd %>=<%= @vnc_passwd %>

LABEL <%= @name %>-<%= @autofile %>
        MENU LABEL <%= @release %> <%= @p_arch %>: ^Minimal <%= @autofile %> Installation
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
	APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> <%= @ks_option %>=http://<%= @fqdn %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> url=<%= @inst_repo %>

LABEL <%= @name %>-VM-<%= @autofile %>
        MENU LABEL <%= @release %> <%= @p_arch %>: ^Hyper-V VM (LIS Enabled) <%= @autofile %> 
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
	APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> ksdevice=eth1 <%= @ks_option %>=http://<%= @fqdn %>/<%= @distro %>/<%= @autofile %>/<%= @name %>.<%= @autofile %> url=<%= @inst_repo %>

LABEL <%= @name %>-rescue
        MENU LABEL <%= @release %> <%= @p_arch %>: ^Rescue
        KERNEL ../<%= @distro %>/<%= @p_arch %>/<%= @rel_number %>
        APPEND initrd=../<%= @distro %>/<%= @p_arch %>/<%= @target_initrd %> url=<%= @inst_repo %>

